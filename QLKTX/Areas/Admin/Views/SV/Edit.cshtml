@model QLKTX.Models.EF.SinhVien
@{
    ViewBag.Title = "Cập nhật sinh viên";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/sv" class="nav-link">Sinh Viên</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Cập nhật</a>
        </li>
    </ul>

}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Cập nhật sinh viên</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Sinh Vien</a></li>
                    <li class="breadcrumb-item active">Cập nhật</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin sinh viên</h3>
        </div>
        <div class="card-body">
            <div class="bs-stepper-content">
                @using (Html.BeginForm("Edit", "SV", FormMethod.Post, new { }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(x=>x.MaSV)
                    <!-- your steps content here -->
                    <div id="logins-part" class="content active dstepper-block" role="tabpanel" aria-labelledby="logins-part-trigger">
                        <div class="form-group">
                            <label for="exampleInputMSSV">MSSV </label>
                            @Html.TextBoxFor(x => x.MaSV, new { @class = "form-control", @placeholder = "MSSV" })
                            @Html.ValidationMessageFor(x => x.MaSV, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputHoTen">Họ Tên</label>
                            @Html.TextBoxFor(x => x.HoTen, new { @class = "form-control", @placeholder = "Họ Tên" })
                            @Html.ValidationMessageFor(x => x.HoTen, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputKhoa">Khoa</label>
                            @Html.TextBoxFor(x => x.Khoa, new { @class = "form-control", @placeholder = "Khoa" })
                            @Html.ValidationMessageFor(x => x.Khoa, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputLop">Lớp</label>
                            @Html.TextBoxFor(x => x.Lop, new { @class = "form-control", @placeholder = "Lớp" })
                            @Html.ValidationMessageFor(x => x.Lop, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputNgaySinh">Ngày Sinh</label>
                            @Html.TextBoxFor(x => x.NgaySinh, new { @class = "form-control", @placeholder = "Ngày Sinh" })
                            @Html.ValidationMessageFor(x => x.NgaySinh, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputGioiTinh">Giới Tính</label>
                            @Html.TextBoxFor(x => x.GioiTinh, new { @class = "form-control", @placeholder = "Giới Tính" })
                            @Html.ValidationMessageFor(x => x.GioiTinh, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputSDT">SĐT</label>
                            @Html.TextBoxFor(x => x.SDT, new { @class = "form-control", @placeholder = "SĐT" })
                            @Html.ValidationMessageFor(x => x.SDT, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail">Email</label>
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "Email" })
                            @Html.ValidationMessageFor(x => x.Email, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputCCCD">CCCD</label>
                            @Html.TextBoxFor(x => x.CCCD, new { @class = "form-control", @placeholder = "CCCD" })
                            @Html.ValidationMessageFor(x => x.CCCD, null, new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <a href="/admin/sv" class="btn btn-danger">Quay Lại</a>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>

                }


            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->

