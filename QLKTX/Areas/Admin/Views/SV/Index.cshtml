@model IEnumerable<QLKTX.Models.EF.SinhVien>
@{
    ViewBag.Title = "Sinh Viên";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/sv" class="nav-link">Sinh Viên</a>
        </li>
    </ul>

}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Danh Sách Sinh Viên</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Sinh Viên</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh sách sinh viên</h3>
            <div class="card-tools">
                <a href="/admin/sv/add" class="btn btn-outline-primary">Thêm mới</a>
            </div>
        </div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>MSSV</th>
                    <th>Họ Tên</th>
                    <th>Khoa</th>
                    <th>Lớp</th>
                    <th>Ngày Sinh</th>
                    <th>Giới Tính</th>
                    <th>SĐT</th>
                    <th>Email</th>
                    <th>CCCD</th>
                </tr>
            </thead>
            <tbody>
                @if(Model != null && Model.Any())
                {
                    var i = 1;
                    foreach (var item in Model)
                        {
                            <tr id ="trow_@item.MaSV">
                                @*<td>@i</td>*@
                                <td>@item.MaSV</td>
                                <td>@item.HoTen</td>
                                <td>@item.Khoa</td>
                                <td>@item.Lop</td>
                                <td>@item.NgaySinh</td>
                                <td>@item.GioiTinh</td>
                                <td>@item.SDT</td>
                                <td>@item.Email</td>
                                <td>@item.CCCD</td>
                                <td>
                                    <a href="/admin/sv/edit/@item.MaSV" class="btn btn-outline-primary">Sửa</a>
                                    <a href="#" data-id = @item.MaSV class="btn btn-outline-danger btnDelete">Xóa</a>
                                </td>
                            </tr>
                        i++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="9"> Không có bản ghi nào!!!</td>


                    </tr>
                }
            </tbody>
        </table>
      
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->

@section scripts{
    <script>
        $(document).ready(function () {
            $('body').on('click', '.btnDelete', function () {
                var id = $(this).data("id");
                /*  alert(id);*/
                var conf = confirm("Bạn có muốn xóa thông tin này không??");
                if (conf === true) {
                    $.ajax({
                        url: '/admin/sv/delete',
                        type: 'POST',
                        data: { id: id },
                        success: function (rs) {
                            if (rs.success) {
                                $('#trow_' + id).remove();
                            }

                        }
                    });
                }
            });
        });
    </script>
    }